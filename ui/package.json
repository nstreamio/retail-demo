{
  "name": "@swim/retail-demo",
  "version": "0.1.0",
  "description": "Swim Retail Demo",
  "homepage": "https://github.com/swimos/retail-demo",
  "copyright": "2015-2022 Swim.inc",
  "license": "Apache-2.0",
  "repository": "https://github.com/swimos/retail-demo.git",
  "main": "build/javascript/retail-demo.js",
  "devDependencies": {
    "@types/eslint": "8",
    "@types/node": "20",
    "@typescript-eslint/eslint-plugin": "5",
    "@typescript-eslint/parser": "5",
    "eslint": "8",
    "tslib": ">=2.5",
    "typescript": "~5.2"
  },
  "dependencies": {},
  "scripts": {
    "mkdir-ui": "mkdir -p ./dist/store/libs && mkdir -p ./dist/store/assets",
    "store:install": "cd ./store && npm install && cd ..",
    "store:compile": "cd ./store && npm run compile && cd ..",
    "store:bundle": "cd ./store && npm run bundle && cd ..",
    "store:copy-app": "cd ./store && npm run copy-app && cd ..",
    "customer:install": "cd ./customer-ui && npm install && cd ..",
    "customer:compile": "cd ./customer-ui && npm run compile && cd ..",
    "customer:bundle": "cd ./customer-ui && npm run bundle && cd ..",
    "customer:copy-app": "cd ./customer-ui && npm run copy-app && cd ..",
    "all:install": "npm run store:install && npm run customer:install",
    "all:compile": "npm run store:compile && npm run customer:compile",
    "all:bundle": "npm run store:bundle && npm run customer:bundle",
    "all:copy-app": "npm run store:copy-app && npm run customer:copy-app",
    "compile": "npm run all:compile",
    "bundle": "npm run all:bundle",
    "copy-app": "npm run all:copy-app",
    "build": "npm run compile && npm run bundle && npm run copy-app",
    "postinstall": "npm run mkdir-ui && npm run all:install"
  }
}
